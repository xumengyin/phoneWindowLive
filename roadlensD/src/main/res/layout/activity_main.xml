<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:scrollbars="none"
    tools:context="com.example.voiceinput.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/main_item_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <com.example.voiceinput.MainItemView
                style="@style/menu_item_style"
                android:layout_width="@dimen/main_item_width"
                android:layout_height="0dp"
                android:layout_margin="@dimen/main_item_margin"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="语音对讲"
                app:imageview="@drawable/voice_talk"
                />

            <com.example.voiceinput.MainItemView
                style="@style/menu_item_style"
                android:layout_width="@dimen/main_item_width"
                android:layout_height="0dp"
                android:layout_margin="@dimen/main_item_margin"
                android:layout_weight="1"
                android:text="蓝牙连接"
                app:imageview="@mipmap/ic_launcher"
                />
        </LinearLayout>

        <com.example.voiceinput.MainItemView
            style="@style/menu_item_style"
            android:layout_width="@dimen/main_item_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_item_margin"
            android:text="你妹"
            app:imageview="@mipmap/ic_launcher"
            />

        <com.example.voiceinput.MainItemView
            style="@style/menu_item_style"
            android:layout_width="@dimen/main_item_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_item_margin"
            android:text="车辆导航"
            app:imageview="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <com.example.voiceinput.VhrMenuItem
                style="@style/menu_item_style"
                android:layout_width="@dimen/main_item_width"
                android:layout_height="0dp"
                android:layout_margin="@dimen/main_item_margin"
                android:layout_weight="1"
                android:text="VHR车辆健康档案"
                app:imageview="@mipmap/ic_launcher"
                />

            <com.example.voiceinput.MainItemView
                style="@style/menu_item_style"
                android:layout_width="@dimen/main_item_width"
                android:layout_height="0dp"
                android:layout_margin="@dimen/main_item_margin"
                android:layout_weight="1"
                android:text="车辆轨迹"
                app:imageview="@mipmap/ic_launcher"
                />
        </LinearLayout>

        <com.example.voiceinput.MainItemView
            style="@style/menu_item_style"
            android:layout_width="@dimen/main_item_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_item_margin"
            android:text="安全提醒"
            app:imageview="@mipmap/ic_launcher"
            />

        <com.example.voiceinput.MainItemView
            style="@style/menu_item_style"
            android:layout_width="@dimen/main_item_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_item_margin"
            android:text="喜马拉雅fm"
            app:imageview="@mipmap/ic_launcher"
            />

        <com.example.voiceinput.MainItemView
            style="@style/menu_item_style"
            android:layout_width="@dimen/main_item_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_item_margin"
            android:text="本机设置"
            app:imageview="@mipmap/ic_launcher"
            />
    </LinearLayout>

</HorizontalScrollView>
